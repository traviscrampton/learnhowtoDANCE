<%= render "layouts/errors", :object => @lesson %>

  <%= form_for [@section, @lesson] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :class => "form-control" %>
  <%= f.label :video_url %>
  <%= f.text_field :video_url, :class => "form-control" %>
  <%= f.label :text %>
  <%= f.text_area :text, :class => "form-control" %>
  <%= f.label :cheat_sheet %>
  <%= f.text_area :cheat_sheet, :class => "form-control" %>
  <%= f.label :order_num %>
  <%= f.number_field :order_num, :class => "form-control", :min => '1', :value => Lesson.all.length+1 %>
  <br>
  <%= f.submit :class => 'btn btn-primary'%>
  <% end %>
