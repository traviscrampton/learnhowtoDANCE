<h2>Table Of Contents</h2>

<form>
<label for="search">Search</label>
<input class="form-control" action="index.html" method="post">
</form>
<!-- TODO: search bar -->


<% if @sections.any? %>
  <ul>
    <% @sections.each() do |section| %>
      <li>
        <%= link_to section.name, section_path(section) %> |
        <%= link_to "Edit", edit_section_path(section) %> |
        <%= link_to "Delete", section_path(section),
                              :data => {:confirm => "You sure m8?",
                                        :method => "delete"}%>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>
    There will be no dancing in Bomont
  </p>
<% end %>

<%= link_to 'Add Section', new_section_path %>
